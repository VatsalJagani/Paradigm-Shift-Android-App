<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.learnparadigmshift.vatsal.paradigmshift.fragments.AccountingListFragment">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="7sp"
            android:background="@color/colorBg">


            <TextView
                android:id="@+id/frd_name1"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:text="Vatsal"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/frd_total_amount1"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:text="-10"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:textColor="@color/colorAmount"
                android:textSize="20sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/buttonClearAccount"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Clear Account"
            android:layout_marginBottom="7sp"/>

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:listSelector="@color/colorSelectedItems"
            android:divider="@color/colorListItemDivider"
            android:dividerHeight="2dp"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_plus_accounting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_add_circle" />

</FrameLayout>
